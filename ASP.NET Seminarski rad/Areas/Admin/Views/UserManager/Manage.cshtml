@model List<ManageUserRolesViewModel>

    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Dodaj ili ukloni ulogu za @ViewBag.UserName</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                    @Model[i]RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a class="btn btn-primary" asp-action="Index">Vrati se na uloge korisnika</a>
        </div>
        </div>
    </form>