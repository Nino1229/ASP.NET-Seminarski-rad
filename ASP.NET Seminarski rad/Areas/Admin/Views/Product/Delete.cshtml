@model Product

<h1>Obriši proizvod</h1>

<hr />
<div class="row">
    <dl class="col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dl>
    <dl class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductTitle)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model => model.ProductTitle)
    </dl>
    <dl class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductDescription)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model => model.ProductDescription)
    </dl>
    <dl class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductQuantity)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model => model.ProductQuantity)
    </dl>
    <dl class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductPrice)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model => model.ProductPrice)
    </dl>
    <dl class="col-sm-6">
        @if (string.IsNullOrEmpty(Model.ProductImage))
        {
            <img src="@("~/Images/no-image.png")" asp-append-version="true" />
        }
        else
        {
            <img src="@("~/Images/"+Model.ProductImage)" asp-append-version="true" />

        }
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Obriši" class="btn btn-danger" />
</form>
<hr />

<div>
    <a asp-action="Index" class="btn btn-primary">Vrati se na popis proizvoda</a>
</div>