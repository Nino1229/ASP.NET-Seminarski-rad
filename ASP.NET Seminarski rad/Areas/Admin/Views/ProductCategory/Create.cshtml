@model ProductCategory

<h1>Dodaj novu kategoriju</h1>

<hr />

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj novu kategoriju" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-productId="@ViewBag.ProductId">Vrati se na popis proizvoda i kategorija</a>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }