@model ProductCategory

<h1>Detalji proizvoda i kategorija</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Category
        </dt>
        <dt class="col-sm-10">
            @Model.CategoryTitle
        </dt>
        <dt class="col-sm-2">
            Product
        </dt>
        <dt class="col-sm-10">
            @Model.ProductTitle
        </dt>
    </dl>
</div>

<div>
    <a asp-action="Index" asp-route-productId="@Model.ProductId">Vrati se na popis proizvoda i kategorija</a>
</div>