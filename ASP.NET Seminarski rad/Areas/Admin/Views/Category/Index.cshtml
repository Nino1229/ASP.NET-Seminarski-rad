@model IEnumerable<Category>

<h1>Kategorije proizvoda</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Kreiraj novu kategoriju proizvoda</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryTitle)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryTitle)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a>
                </td>               
            </tr>
        }
    </tbody>
</table>