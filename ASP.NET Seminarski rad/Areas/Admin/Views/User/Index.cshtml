@using ASP.NET_Seminarski_rad.Data
@model List<ApplicationUser>

    <h1>Popis korisnika</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Ime</th>
                <th>Prezime</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@user.Id">Update</a>
                </td>
                </tr>
            }
        </tbody>
    </table>